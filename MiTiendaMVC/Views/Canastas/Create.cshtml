@model MiTiendaMVC.Models.ViewModels.CanastaViewModel

@{
    ViewData["Title"] = "Crear Canasta";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ClienteId"></label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
            <option value="">-- Selecciona un cliente --</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductosSeleccionados"></label>
        <select asp-for="ProductosSeleccionados" class="form-control" asp-items="Model.ProductosList" multiple>
        </select>
        <span asp-validation-for="ProductosSeleccionados" class="text-danger"></span>
        <small class="form-text text-muted">
            Mantén Ctrl (o Cmd) para seleccionar varios productos.
        </small>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
